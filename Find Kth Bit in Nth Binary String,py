class Solution:
    def findKthBit(self, n: int, k: int) -> str:
        def bits( n ):
            if n == 1:
                return "0"
            prev = bits( n - 1)
            m = ""
            for i in prev[::-1]:
                if i == "1":
                    m+="0"
                else:
                    m+="1"
            return prev+"1"+m
        arr = bits(n)
        return arr[k-1]
